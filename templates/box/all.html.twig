{% extends 'base.html.twig' %}
{% import 'macros/box_card.html.twig' as boxCard %}

{% block title %}
    Organizer: All Boxes
{% endblock %}

{% block body %}
<div class="container main-window">
    <div class="row mb-3 text-center">
        <div class="col">
            <h4>All Boxes</h4>
        </div>
    </div>
    <div class="row mb-3 text-left">
        <div class="col">
            <a class="btn btn-light" href="/">&lt; Back</a>
        </div>
    </div>
    {% for row in boxes|batch(3, 'skip') %}
        <div class="row mb-3">
            {% for box in row %}
                <div class="col-md-12 col-lg-4">
                    {% if box != 'skip' %}
                        {{ boxCard.draw(box, true) }}
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    {% endfor %}
</div>
{% endblock %}
