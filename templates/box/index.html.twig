{% extends 'base.html.twig' %}

{% block title %}
    Organizer: {{ currentBox.label }}
{% endblock %}

{% block body %}
<div class="container main-window">
    <div class="row mb-3 text-center">
        <div class="col">
            <h4>{{ currentBox.displayLabel }}</h4>
        </div>
    </div>
    <div class="row mb-3 text-left">
        <div class="col">
            <a class="btn btn-light" href="/location/{{ currentBox.locationId | e('url') }}">&lt; Back</a>
        </div>
    </div>
    <form method="POST">
        <div class="row mb-3">
            <div class="col">
                <div class="form-group">
                    <label for="id">Box</label>
                    <input type="text" class="form-control" disabled id="id" placeholder="Automatically Assigned" value="{{ currentBox.displayId | e('html_attr') }}">
                </div>
                <div class="form-group">
                    <label for="label">Label</label>
                    <input type="text" class="form-control" id="label" name="label" placeholder="Box Label" value="{{ currentBox.label | e('html_attr') }}">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="description" placeholder="Description of Contents">{{ currentBox.description| e('html') }}</textarea>
                </div>
            </div>
        </div>
        <div class="row mb-3 text-left">
            <div class="col">
                <input type="submit" class="form-control btn btn-primary" value="Save">
            </div>
            <div class="col">
                <a class="form-control btn btn-secondary" href="/location/{{ currentBox.locationId | e('url') }}">Cancel</a>
            </div>
        </div>
    </form>
</div>
{% endblock %}
