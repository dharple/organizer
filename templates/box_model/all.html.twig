{% extends 'base.html.twig' %}
{% import 'macros/box_model_card.html.twig' as boxModelCard %}

{% block title %}
    Organizer: All Box Models
{% endblock %}

{% block body %}
<div class="container main-window">
    {% for row in boxModels|batch(3, 'skip') %}
        <div class="row mb-3">
            {% for boxModel in row %}
                <div class="col-md-12 col-lg-4">
                    {% if boxModel != 'skip' %}
                        {{ boxModelCard.draw(boxModel, true) }}
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    {% endfor %}
</div>
{% endblock %}
